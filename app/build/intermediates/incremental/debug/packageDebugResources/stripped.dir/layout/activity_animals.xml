<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView to display animals -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/animalsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <!-- Message to show when there are no animals -->
    <TextView
        android:id="@+id/noAnimalsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No animals available"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_centerInParent="true"/>

    <!-- Floating Action Button to add a new animal (With "+" icon) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/colorAccent"
    android:src="@android:drawable/ic_input_add"
    android:contentDescription="Add Animal"/>
</RelativeLayout>
